FROM python:3.11-slim

WORKDIR /app

# Needed for healthchecks (curl) and HTTPS requests
RUN apt-get update \
    && apt-get install -y --no-install-recommends curl ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install Python deps
COPY app/recommender-service/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Copy service code
COPY app/recommender-service/ ./

EXPOSE 8000

CMD ["python", "app.py"]
